{{#if isCritical}}
<h2 class="heal"><i class="fas fa-first-aid"></i>&nbsp;{{localize "COC.roll.criticalHeal"}} !</h2>
{{else}}
<h2 class="heal"><i class="fas fa-first-aid"></i>&nbsp;{{localize "COC.roll.heal"}}</h2>
{{/if}}
<div class="flexrow">
    <div class="flex1 no-wrap">
        <h3><strong>{{label}}</strong></h3>
    </div>
    {{#if showButtons}}
        <div class="flex1 right no-wrap">
            <a class="btn apply-dmg" data-apply="full">
                <i class="fas fa-user-minus" data-tooltip="{{localize "COC.ui.applyDamage"}}"></i>
            </a>
            <a class="btn apply-dmg" data-apply="heal">
                <i class="fas fa-user-plus" data-tooltip="{{localize "COC.ui.applyHealing"}}"></i>
            </a>
        </div>
    {{/if}}
</div>