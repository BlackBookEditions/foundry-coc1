<div class="flexrow">
    <div class="flex1">
        <!-- STATS -->
        <div class="flexrow table-header no-wrap">
            <div class="flex2 center rollable" data-rolling="data.stats" data-roll-type="attributes">
                <div class="field-label ellipsis"><i class="fas fa-dice-d6"></i>&nbsp;{{ localize 'COC.stats.abbrev' }}</div>
            </div>
            <div class="flex1 center">
                <div class="field-label">{{ localize 'COC.stats.base.abbrev' }}</div>
            </div>
            <div class="flex1 center">
                <div class="field-label">{{ localize 'COC.stats.racial.abbrev' }}</div>
            </div>
            <div class="flex1 center">
                <div class="field-label">{{ localize 'COC.stats.value.abbrev' }}</div>
            </div>
            <div class="flex1 center">
                <div class="field-label">{{ localize 'COC.stats.bonus.abbrev' }}</div>
            </div>
            <div class="flex1 center">
                <div class="field-label">{{ localize 'COC.stats.mod.abbrev' }}</div>
            </div>
        </div>
        {{#each actor.data.stats as |stat id|}}
            <div class="flexrow no-wrap">
                <div class="flex2 center cell-header rollable" data-rolling="data.stats.{{id}}" data-roll-type="skillcheck">
                    <div class="field-label" title="{{ localize stat.label }}">{{ localize stat.abbrev }}</div>
                    <input name="data.stats.{{id}}.abbrev" type="hidden" value="{{stat.abbrev}}" data-dtype="String"/>
                    <input name="data.stats.{{id}}.label" type="hidden" value="{{stat.label}}" data-dtype="String"/>
                    <input name="data.stats.{{id}}.key" type="hidden" value="{{stat.key}}" data-dtype="String"/>
                </div>
                <div class="flex1 center cell">
                    <input class="field-value" name="data.stats.{{id}}.base" type="text" value="{{stat.base}}" data-dtype="Number"/>
                </div>
                <div class="flex1 center cell">
                    <input class="field-value" name="data.stats.{{id}}.racial" readonly="true" type="text" value="{{stat.racial}}" data-dtype="Number"/>
                </div>
                <div class="flex1 center cell">
                    <input class="field-value" name="data.stats.{{id}}.bonus" type="text" value="{{stat.bonus}}" data-dtype="Number"/>
                </div>
                <div class="flex1 center cell">
                    <input class="field-value" name="data.stats.{{id}}.value" readonly="true" type="text" value="{{stat.value}}" data-dtype="Number"/>
                </div>
                <div class="flex1 center cell">
                    <input class="field-value" name="data.stats.{{id}}.mod" readonly="true" type="text" value="{{numberFormat stat.mod decimals=0 sign=true}}" data-dtype="Number"/>
                </div>
            </div>
        {{/each}}
        <!-- /STATS -->
    </div>
    <div class="flex1">
        <!-- ATTACKS -->
        <div class="flexrow table-header no-wrap">
            <div class="flex2 center">
                <div class="field-label ellipsis">{{ localize 'COC.attacks.label' }}</div>
            </div>
            <div class="flex1 center">
                <div class="field-label">{{ localize 'COC.ui.base' }}</div>
            </div>
            <div class="flex1 center">
                <div class="field-label">{{ localize 'COC.ui.bonus' }}</div>
            </div>
            <div class="flex1 center">
                <div class="field-label">{{ localize 'COC.ui.mod' }}</div>
            </div>
        </div>
        {{#each actor.data.attacks as |attack id|}}
        <div class="flexrow no-wrap">
            <div class="flex2 center cell-header rollable" data-rolling="data.attacks.{{id}}" data-roll-type="skillcheck">
                <span class="field-label ellipsis">{{ localize attack.abbrev }}</span>
                <input name="data.attacks.{{id}}.abbrev" type="hidden" value="{{attack.abbrev}}" data-dtype="String"/>
                <input name="data.attacks.{{id}}.label" type="hidden" value="{{attack.label}}" data-dtype="String"/>
                <input name="data.attacks.{{id}}.key" type="hidden" value="{{attack.key}}" data-dtype="String"/>
            </div>
            <div class="flex1 center cell">
                {{#if (isNull attack.base)}}
                    <input class="field-value" name="data.attacks.{{id}}.base" readonly="true" type="text" value="" placeholder="Base" data-dtype="Number"/>
                {{else}}
                    <input class="field-value" name="data.attacks.{{id}}.base" readonly="true" type="text" value="{{numberFormat attack.base decimals=0 sign=true}}" placeholder="Base" data-dtype="Number"/>
                {{/if}}
            </div>
            <div class="flex1 center cell">
                {{#if (isNull attack.base)}}
                    <input class="field-value" name="data.attacks.{{id}}.bonus" type="text" value="" placeholder="Bonus" data-dtype="Number"/>
                {{else}}
                    <input class="field-value" name="data.attacks.{{id}}.bonus" type="text" value="{{numberFormat attack.bonus decimals=0 sign=true}}" placeholder="Bonus" data-dtype="Number"/>
                {{/if}}
            </div>
            <div class="flex1 center cell">
                {{#if (isNull attack.base)}}
                    <input class="field-value" name="data.attacks.{{id}}.mod" readonly="true" type="text" value="" placeholder="Mod" data-dtype="Number"/>
                {{else}}
                    <input class="field-value" name="data.attacks.{{id}}.mod" readonly="true" type="text" value="{{numberFormat attack.mod decimals=0 sign=true}}" placeholder="Mod" data-dtype="Number"/>
                {{/if}}
            </div>
        </div>
        {{/each}}
        <!-- /ATTACKS -->
        <div class="flexrow"><div class="flex1 spacer"></div></div>
        <!-- INIT -->
        <div class="flexrow table-header no-wrap">
            <div class="flex2 center">
                <div class="field-label ellipsis">{{ localize 'COC.attributes.initiative.label' }}</div>
            </div>
            <div class="flex1 center">
                <div class="field-label">{{ localize 'COC.attributes.base.abbrev' }}</div>
            </div>
            <div class="flex1 center">
                <div class="field-label">{{ localize 'COC.attributes.bonus.abbrev' }}</div>
            </div>
            <div class="flex1 center">
                <div class="field-label">{{ localize 'COC.attributes.value.abbrev' }}</div>
            </div>
        </div>
        <div class="flexrow no-wrap">
            <div class="flex2 center cell-header">
                <span class="field-label ellipsis"><i class="fas fa-bolt"></i>&nbsp;{{ localize 'COC.attributes.init.abbrev' }}</span>
            </div>
            <div class="flex1 center cell">
                <input class="field-value" name="data.attributes.init.base" readonly="true" type="text" value="{{actor.data.attributes.init.base}}" placeholder="{{ localize 'COC.attributes.base.abbrev' }}" data-dtype="Number"/>
            </div>
            <div class="flex1 center cell">
                <input class="field-value" name="data.attributes.init.bonus" type="text" value="{{actor.data.attributes.init.bonus}}" placeholder="{{ localize 'COC.attributes.bonus.abbrev' }}" data-dtype="Number"/>
            </div>
            <div class="flex1 center cell">
                <input class="field-value" name="data.attributes.init.value" readonly="true" type="text" value="{{actor.data.attributes.init.value}}" placeholder="{{ localize 'COC.attributes.value.abbrev' }}" data-dtype="Number"/>
            </div>
        </div>
        <!-- /INIT -->
    </div>
</div>
<div class="flexrow bg-blue">
    <div class="flex1"></div>
    <div class="flex1">
    </div>
</div>



