<div class="flexrow">
    <div class="flex1">
        <div class="flexrow no-wrap">
            <div class="flex2 center rollable" data-rolling="data.stats" data-roll-type="attributes">
                <div class="field-label ellipsis"><i class="fas fa-dice-d6"></i>&nbsp;{{ localize 'COC.stats.abbrev' }}</div>
            </div>
            <div class="flex1 center">
                <div class="field-label">{{ localize 'COC.stats.base.abbrev' }}</div>
            </div>
            <div class="flex1 center">
                <div class="field-label">{{ localize 'COC.stats.racial.abbrev' }}</div>
            </div>
            <div class="flex1 center">
                <div class="field-label">{{ localize 'COC.stats.value.abbrev' }}</div>
            </div>
            <div class="flex1 center">
                <div class="field-label">{{ localize 'COC.stats.bonus.abbrev' }}</div>
            </div>
            <div class="flex1 center">
                <div class="field-label">{{ localize 'COC.stats.mod.abbrev' }}</div>
            </div>
        </div>
        {{#each actor.data.stats as |stat id|}}
            <div class="flexrow no-wrap">
                <div class="flex2 center rollable" data-rolling="data.stats.{{id}}" data-roll-type="skillcheck">
                    <div class="field-label" title="{{ localize stat.label }}">{{ localize stat.abbrev }}</div>
                    <input name="data.stats.{{id}}.abbrev" type="hidden" value="{{stat.abbrev}}" data-dtype="String"/>
                    <input name="data.stats.{{id}}.label" type="hidden" value="{{stat.label}}" data-dtype="String"/>
                    <input name="data.stats.{{id}}.key" type="hidden" value="{{stat.key}}" data-dtype="String"/>
                </div>
                <div class="flex1 center cell">
                    <input class="field-value" name="data.stats.{{id}}.base" type="text" value="{{stat.base}}" data-dtype="Number"/>
                </div>
                <div class="flex1 center cell readonly">
                    <input class="field-value" name="data.stats.{{id}}.racial" readonly="true" type="text" value="{{stat.racial}}" data-dtype="Number"/>
                </div>
                <div class="flex1 center cell">
                    <input class="field-value" name="data.stats.{{id}}.bonus" type="text" value="{{stat.bonus}}" data-dtype="Number"/>
                </div>
                <div class="flex1 center cell readonly">
                    <input class="field-value" name="data.stats.{{id}}.value" readonly="true" type="text" value="{{stat.value}}" data-dtype="Number"/>
                </div>
                <div class="flex1 center cell readonly">
                    <input class="field-value" name="data.stats.{{id}}.mod" readonly="true" type="text" value="{{numberFormat stat.mod decimals=0 sign=true}}" data-dtype="Number"/>
                </div>
            </div>
        {{/each}}
    </div>
    <div class="flex1"></div>
</div>
