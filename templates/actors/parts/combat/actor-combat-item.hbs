<ol class="item-list">
    <li class="item flexrow weapon" data-item-id="{{id}}" data-item-type="weapon" draggable="false">
<!--        <div class="item-name" data-roll-type="weapon">-->
        <div class="item-name flexrow" data-roll-type="weapon">
            <div class="item-image weapon-image"></div>
            <input class="field-value weapon-name" name="data.weapons.{{id}}.name" type="text" value="{{name}}" placeholder="{{ localize 'COC.weapons.name.abbrev' }}" data-dtype="String"/>
        </div>
        <div class="item-detail">
            {{#if (isNull mod)}}
                <input class="field-value weapon-mod" name="data.weapons.{{id}}.mod" type="text" value="" placeholder="{{ localize 'COC.weapons.mod.abbrev' }}" data-dtype="Number"/>
            {{else}}
                <input class="field-value weapon-mod" name="data.weapons.{{id}}.mod" type="text" value="{{numberFormat mod decimals=0 sign=true}}" placeholder="{{ localize 'COC.weapons.mod.abbrev' }}" data-dtype="Number"/>
            {{/if}}
        </div>
        <div class="item-detail">
            {{#if (isNull critrange)}}
                <input class="field-value weapon-critrange" name="data.weapons.{{id}}.critrange" type="text" value="20" placeholder="{{ localize 'COC.ui.critrange' }}" data-dtype="String"/>
            {{else}}
                <input class="field-value weapon-critrange" name="data.weapons.{{id}}.critrange" type="text" value="{{critrange}}" placeholder="{{ localize 'COC.ui.critrange' }}" data-dtype="String"/>
            {{/if}}
        </div>
        <div class="item-damage">
            <input class="field-value weapon-dmg" name="data.weapons.{{id}}.dmg" type="text" value="{{dmg}}" placeholder="{{ localize 'COC.weapons.dmg.abbrev' }}" data-dtype="String"/>
        </div>
        <div class="item-controls">
            <a class="item-control rollable" data-roll-type="encounter-weapon"><i class="fas fa-dice-d20"></i></a>
            <!--                    <a class="item-control rollable" data-roll-type="encounter-damage"><i class="fas fa-dice"></i></a>-->
            <a class="item-control weapon-remove" title="Delete Item"><i class="fas fa-trash"></i></a>
        </div>
    </li>
</ol>
