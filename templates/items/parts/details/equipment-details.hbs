<h3 class="form-header">{{localize "COC.ui.equipment"}}</h3>

<div class="form-group">
    <label>{{localize "COC.ui.properties"}}</label>
    <div class="form-fields">
        <label class="checkbox"> <input type="checkbox" name="data.properties.equipable" {{checked data.properties.equipable}}> {{localize "COC.ui.equipable"}}</label>
{{#if (not data.properties.unique)}}
        <label class="checkbox"> <input type="checkbox" name="data.properties.stackable" {{checked data.properties.stackable}}> {{localize "COC.ui.stackable"}}</label>
{{/if}}
{{#if (not data.properties.stackable)}}
        <label class="checkbox"> <input type="checkbox" name="data.properties.unique"    {{checked data.properties.unique}}> Unique </label>
{{/if}}
        <label class="checkbox"> <input type="checkbox" name="data.properties.tailored"  {{checked data.properties.tailored}}> Sur-mesure </label>
        <label class="checkbox"><input type="checkbox" name="data.properties.2h" {{checked data.properties.2h}}> {{localize "COC.ui.2H"}}</label>
    </div>
</div>
{{#if data.properties.equipable}}
    <div class="form-group">
        <label>{{localize "COC.ui.slot"}}</label>
        <div class="form-fields">
            <select name="data.slot" data-type="String" style="width:100%">
                {{#select data.slot}}
                    <option value="">{{localize "COC.None"}}</option>
                    <option value="hand">{{localize "COC.slot.hand"}}</option>
                    <option value="head">{{localize "COC.slot.head"}}</option>
                    <option value="ear">{{localize "COC.slot.ear"}}</option>
                    <option value="neck">{{localize "COC.slot.neck"}}</option>
                    <option value="shoulders">{{localize "COC.slot.shoulders"}}</option>
                    <option value="chest">{{localize "COC.slot.chest"}}</option>
                    <option value="back">{{localize "COC.slot.back"}}</option>
                    <option value="arm">{{localize "COC.slot.arm"}}</option>
                    <option value="finger">{{localize "COC.slot.finger"}}</option>
                    <option value="wrist">{{localize "COC.slot.wrist"}}</option>
                    <option value="waist">{{localize "COC.slot.waist"}}</option>
                    <option value="legs">{{localize "COC.slot.legs"}}</option>
                    <option value="feet">{{localize "COC.slot.feet"}}</option>
                    <option value="belt">{{localize "COC.slot.belt"}}</option>
                    <option value="backpack">{{localize "COC.slot.backpack"}}</option>
                    <option value="quiver">{{localize "COC.slot.quiver"}}</option>
                {{/select}}
            </select>
        </div>
    </div>
{{/if}}
<div class="form-group">
    <label>{{ localize "COC.ui.price" }} (en PA)</label>&nbsp; <input type="number" name="data.price" value="{{data.price}}" data-dtype="Number"/>
</div>
<div class="form-group">
    <label>{{ localize "COC.ui.rarity" }}</label>&nbsp; <select name="data.rarity" data-type="String" style="width:100%">
    {{#select data.rarity}}
        <option value="">{{localize "COC.None"}}</option>
        <option value="common">{{localize "COC.rarity.common"}}</option>
        <option value="moderate">{{localize "COC.rarity.moderate"}}</option>
        <option value="rare">{{localize "COC.rarity.rare"}}</option>
        <option value="very-rare">{{localize "COC.rarity.very-rare"}}</option>
        {{#if (not data.properties.stackable)}}<option value="unique">{{localize "COC.rarity.unique"}}</option>{{/if}}
    {{/select}}
</select>
</div>
{{#if (equals data.subtype "container")}}
    <div class="form-group">
        <label>{{ localize "COC.ui.capacity" }}</label>&nbsp; <input type="number" name="data.capacity" value="{{data.capacity}}" data-dtype="Number"/>
    </div>
{{/if}}
{{#if data.properties.stackable}}
    <div class="form-group">
        <label>{{ localize "COC.ui.quantity" }}</label>
        <div class="form-fields">
            <input type="number" name="data.qty" value="{{data.qty}}" placeholder="{{localize "COC.ui.quantity"}}" data-dtype="Number"/>
        </div>
    </div>
    <div class="form-group">
        <label>{{localize "COC.ui.stacksize"}}</label>
        <div class="form-fields">
            <input name="data.stacksize" type="text" value="{{data.stacksize}}" placeholder="{{localize "COC.placeholders.stacksize"}}" data-dtype="Number">
        </div>
    </div>
{{/if}}